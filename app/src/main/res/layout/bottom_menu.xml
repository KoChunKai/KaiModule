<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:background="#84fff6">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btm_menu_1"
        android:padding="25dp"
        android:layout_weight="1"
        android:text="1"
        android:textSize="20sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btm_menu_2"
        android:padding="25dp"
        android:layout_weight="1"
        android:text="2"
        android:textSize="20sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btm_menu_3"
        android:padding="25dp"
        android:layout_weight="1"
        android:text="3"
        android:textSize="20sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btm_menu_4"
        android:layout_weight="1"
        android:padding="25dp"
        android:text="4"
        android:textSize="20sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btm_menu_5"
        android:padding="25dp"
        android:layout_weight="1"
        android:text="5"
        android:textSize="20sp" />

</LinearLayout>