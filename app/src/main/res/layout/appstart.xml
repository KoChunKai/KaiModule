<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:id="@+id/tv_data"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="45dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/appstart_icon"
        android:background="#ff3978" />

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewpager"
        android:background="#ffffff"
        android:layout_below="@+id/pagertab">

    </android.support.v4.view.ViewPager>
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/pagertab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#55ffa1"
        app:pstsIndicatorColor="#ff000000"
        app:pstsIndicatorHeight="5dp"
        app:pstsUnderlineColor="#ffff0000"
        app:pstsUnderlineHeight="10dp"
        app:pstsTabTextColor="@color/tab_color"
        app:pstsTabTextSize="16sp"/>


</RelativeLayout>